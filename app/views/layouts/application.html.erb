<!DOCTYPE html>
<html>
  <head>
    <title>games.qalep.co</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <%= stylesheet_link_tag 'application', media: 'all' %>

    <%= javascript_pack_tag 'application' %>
    <%= javascript_pack_tag 'games' %>
    <script src="https://kit.fontawesome.com/c8fac941ce.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <div id='games' class='container-sm'>
      <% if @common_data.present? %>
        <common-data :common-data="<%= @common_data.to_json %>"></common-data>
      <% end %>
      <flash rails-messages="<%= (flash.to_hash || {}).to_json %>"></flash>
      <%= yield %>
    </div>
  </body>
</html>
